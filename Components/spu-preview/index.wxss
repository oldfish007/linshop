.container{
    width: 340rpx;
    display:flex;
    flex-direction:column;
    box-shadow: 0px 0px6px rgba(221,221,221,0.5);
    margin-bottom: 30rpx;
    background-color: #ffffff;
}
.content-container{
    display:flex;
    flex-direction:column;
}
.img{
    width: 100%;
    height: 360rpx;
}
.tags{
    display:flex;
    flex-direction:row;
    margin-bottom: 6rpx;
    flex-wrap: wrap;
}
.l-tag{
    background-color: #DCEBE6 !important;
    color: #157658 !important;
    padding-left: 6rpx !important;
    padding-right: 6rpx !important;
    height: 36rpx !important;
    margin-right: 5rpx;
}
.title{
    font-size: 28rpx;
    color: #333333;
}
.price-row{
    display:flex;
    flex-direction:row;
}
.discount-price{
    margin-left:20rpx;
}