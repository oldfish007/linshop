.container{
    width: 100%;
    height: 320rpx;
    display: flex;
    flex-direction: row;
    align-items:center;
    justify-content: center;
    background-color: #ffffff;
}
.inner-container{
    width: 730rpx;
    height: 300rpx;
    border: 1px dashed #DCEBE6 ;
}
.grid-item{
   /* width: 200rpx; 只要不超过计算的宽和高就不用设置高和宽*/
   /* height: 200rpx; 不给宽grid-item会自动计算他的高度*/
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 6rpx;
}
.img{
    width: 60rpx;
    height: 60rpx;
}